						</div>

						<!-- Table with Data -->
						<div ng-show="getFilteredCount() > 0">
							<table class="summary-detail-table">
								<thead>
									<tr>
										<th width="4%" ng-show="summaryModalType === 'warning'" class="text-center">
											<i class="fa fa-check-square"></i>
										</th>
										<th width="4%">#</th>
										<th width="5%" class="text-center">PHOTO</th>
										<th width="22%">EMPLOYEE</th>
										<th width="15%">OFFICE</th>
										<th width="30%">REMARKS</th>
										<th width="15%">DATE</th>
									</tr>
								</thead>
								<tbody>
									<tr ng-repeat="item in filteredSummaryList | filter:filterSummaryList track by $index" 
										ng-class="{'selected-row': modalSelectedItems[item.empl_id]}">
										<td ng-show="summaryModalType === 'warning'" class="text-center">
											<label class="custom-checkbox-small">
												<input type="checkbox" 
													   ng-model="modalSelectedItems[item.empl_id]" 
													   ng-change="updateModalSelectAll()">
												<span class="checkmark-small"></span>
											</label>
										</td>
										<td class="text-center">{{$index + 1}}</td>
										<td class="text-center">
											<div class="modal-employee-photo">
												<img class="img-circle employee-photo-modal" 
													 ng-src="{{image_link}}{{item.empl_id}}?v={{currentTimestamp}}" 
													 onerror="this.onerror=null;this.src='../../ResourcesImages/upload_profile.png';"
													 alt="{{item.employee_name}}" />
											</div>
										</td>
										<td>
											<div class="employee-info-modal">
												<div class="employee-details">
													<div class="name">{{item.employee_name}}</div>
													<div class="id">ID: {{item.empl_id}}</div>
												</div>
											</div>
										</td>
										<td>
											<span class="office-badge">
												<i class="fa fa-building"></i>
												{{item.department_short_name}}
											</span>
										</td>
										<td>
											<span class="remark-badge" ng-class="getRemarkBadgeClass(item.remarks_descr)">
												{{item.remarks_descr}}
											</span>
										</td>
														<td>
															<span class="text-muted">
																{{formatDateTime(item.created_dttm)}}
															</span>
														</td>
													</tr>
												</tbody>
											</table>
										</div>

										<!-- Empty State -->
										<div class="modal-empty-state" ng-show="getFilteredCount() === 0">
																	<i class="fa fa-folder-open-o"></i>
											<h5>No Records Found</h5>
							<p ng-show="!summarySearchText">There are no records matching this category.</p>
							<p ng-show="summarySearchText">No results found for "{{summarySearchText}}"</p>
						</div>
					</div>
					<div class="modal-summary-footer">
						<div class="modal-footer-info">
							Showing <strong>{{getFilteredCount()}}</strong> of <strong>{{filteredSummaryList.length}}</strong> records
							<span ng-show="summaryModalType === 'warning' && getModalSelectedCount() > 0" class="selected-info">
								| <strong>{{getModalSelectedCount()}}</strong> selected
							</span>
						</div>
						<div class="modal-footer-actions">
							<button type="button" 
									class="modal-regenerate-btn" 
									ng-show="summaryModalType === 'warning'" 
									ng-disabled="getModalSelectedCount() === 0"
									ng-click="btn_regenerate()">
								<i class="fa fa-refresh"></i>
								Re-Generate Selected ({{getModalSelectedCount()}})
							</button>
							<button type="button" class="modal-close-btn" data-dismiss="modal">
								<i class="fa fa-times"></i> Close
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>

	</section>


